			<mx:Label x="10" y="189" text="Assoziationstyp" fontWeight="bold" fontSize="12"/>
			<mx:Canvas>
				<mx:ComboBox id="associationTypeComboBox" x="153.5" y="189" editable="false" enabled="true" change="handelClick()">
					<mx:ArrayCollection>
						<mx:Object label="Assoziation"/>
						<mx:Object label="Aggregation"/>
						<mx:Object label="Komposition"/>
					</mx:ArrayCollection>
				</mx:ComboBox>
			</mx:Canvas>
			<mx:Button label="Speichern" click="save()" x="480" y="189"/>
			<mx:Button label="Abbrechen" click="close()" x="572" y="189"/>
		</mx:Canvas>
	</mx:TitleWindow> 
